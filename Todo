function pip_install
{
if hash pip-3 2>/dev/null
then
echo "pip-3 install $@"
    sudo pip-3 install --upgrade $@
elif hash pip 2>/dev/null
then
echo "pip install $@"
    sudo pip install --upgrade $@
fi
}




